<form id="edit_topic" data-id="{{topic.id}}">
  <div class="grid-container">
    <div class="grid-x grid-padding-x">
      <div class="cell">
        <label>Subject
          <input type="text" id="topic-subject" value="{{topic.subject}}">
        </label>
      </div>
      <div class="cell">
        <label>Content
          <input type="textarea" id="topic-content" value="{{topic.content}}">
        </label>
        <div class="cell">
          <button type="submit" class="button" data-id="{{topic.id}}">submit</button>
        </div>
      </div>
    </div>
  </div>
</form>

<script src='../../../js/topic.js'></script>